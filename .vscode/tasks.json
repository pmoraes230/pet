{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run with Daphne (WebSocket Support)",
			"type": "shell",
			"command": "${workspaceFolder}/venv/Scripts/python.exe",
			"args": [
				"-m",
				"daphne",
				"-b",
				"0.0.0.0",
				"-p",
				"8000",
				"setup.asgi:application"
			],
			"options": {
				"env": {
					"DJANGO_SETTINGS_MODULE": "setup.settings"
				},
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}